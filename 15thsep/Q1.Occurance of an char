//Write a program to find the first and the last occurence of the letter 'o' and character ',' in "Hello, World".

package class_work;

public class occurance_of_char {
	public static void main(String[] args) {
		String W="Hello world";
		for(int i=0;i<W.length();i++) {
			if(W.charAt(i)=='o') {
				System.out.println("First occurance= "+i);
				break;
			}
		}
		for(int i=W.length()-1;i>=0;i--) {
			if(W.charAt(i)=='o') {
				System.out.println("Last occurance= "+i);
				break;	
			}
		}
	}

}
